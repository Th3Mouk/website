---
interface Props {
  title: string;
  description: string;
  items: string[];
  icon: 'formation' | 'consulting' | 'development';
  color: string;
  url?: string;
}

const { title, description, items, icon, color, url } = Astro.props;

const icons = {
  formation: `<path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />`,
  consulting: `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />`,
  development: `<path stroke-linecap="round" stroke-linejoin="round" d="M6.75 7.5l3 2.25-3 2.25m4.5 0h3m-9 8.25h13.5A2.25 2.25 0 0021 18V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v12a2.25 2.25 0 002.25 2.25z" />`
};
---

<div class={`card bg-base-200 shadow-lg hover:shadow-xl transition-all duration-300 group ${url ? 'cursor-pointer' : ''}`}>
  {url ? (
    <a href={url} class="card-body">
      <div class="flex items-center gap-3 mb-4">
        <div class={`text-${color}`}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
            set:html={icons[icon]}
          />
        </div>
        <h2 class={`card-title text-${color} text-2xl group-hover:scale-105 transition-transform duration-300`}>
          {title}
        </h2>
      </div>
      <p class="text-base-content/80 mb-4">{description}</p>
      <ul class="list-disc list-inside text-base-content/70 space-y-2">
        {items.map((item) => (
          <li class="group-hover:text-base-content/90 transition-colors duration-300">{item}</li>
        ))}
      </ul>
    </a>
  ) : (
    <div class="card-body">
      <div class="flex items-center gap-3 mb-4">
        <div class={`text-${color}`}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
            set:html={icons[icon]}
          />
        </div>
        <h2 class={`card-title text-${color} text-2xl group-hover:scale-105 transition-transform duration-300`}>
          {title}
        </h2>
      </div>
      <p class="text-base-content/80 mb-4">{description}</p>
      <ul class="list-disc list-inside text-base-content/70 space-y-2">
        {items.map((item) => (
          <li class="group-hover:text-base-content/90 transition-colors duration-300">{item}</li>
        ))}
      </ul>
    </div>
  )}
</div>
