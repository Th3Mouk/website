<div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-all duration-300 h-full">
  <div class="card-body">
    <div class="flex items-start gap-4">
      <div class="p-2 rounded-lg bg-primary/10 text-primary">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
          set:html={icons[icon]}
        />
      </div>
      <div>
        <h2 class="card-title text-primary">{title}</h2>
        <p class="mt-2 text-base-content/80">{description}</p>
      </div>
    </div>
  </div>
</div>
